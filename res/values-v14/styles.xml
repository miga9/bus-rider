<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
		<item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@color/accent</item>
        <item name="android:titleTextStyle">@style/MyActionBarTabText</item>
        <item name="android:backgroundStacked">@color/light_accent</item>
    </style>
    
    <style name="MyActionBarTabText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
